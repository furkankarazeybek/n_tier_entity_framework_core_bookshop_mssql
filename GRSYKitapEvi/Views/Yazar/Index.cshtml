@model IEnumerable<GRSYKitapEvi_Model.Models.Yazar>
<br />
<br />

<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Yazar Listesi</h2>
        </div>

        <div class="col-3 text-right">
            <a asp-action="Update_Insert" class="btn btn-info form-control"> Yeni Oluştur  </a>
        </div>

    </div>

   
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>Ad Soyad</th>
                    <th>Doğum Tarihi</th>
                    <th>Lokasyon</th>

                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.AdSoyad

                        </td>

                        <td>
                            @item.DogumTarihi.ToShortDateString()

                        </td>

                        <td>
                            @item.Lokasyon

                        </td>

                        <td>
                            <a class="btn btn-primary text-white" asp-action="Update_Insert" asp-route-Id="@item.Yazar_Id">
                                Düzenle
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.Yazar_Id">
                                Sil
                            </a>
                        </td>

                    </tr>
                }
            </table>
        }

        else
        {
            <p>Listelenecek herhangi bir yazar bulunamadı..</p>
        }
    </div>
</div>
